            </div>        

            <a class="btn ml-auto" href="{{ path('infos')}}" role="button">Infos</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') or is_granted('IS_AUTHENTICATED_ANONYMOUSLY') -%}
                <a class="btn ml-auto" href="{{ path('fos_user_security_logout')}}" role="button">Deconnexion</a>
                
            {% else %}
                <a class="btn ml-auto" href="{{ path('fos_user_security_login')}}" role="button">Connexion</a>
