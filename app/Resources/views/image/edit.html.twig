{% form_theme edit_form 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <h1>Image edit</h1>

    {{ form_start(edit_form) }}
        {{ form_label(edit_form.imageLabel , 'Titre') }}
        {{ form_widget(edit_form.imageLabel) }}
        {{ form_label(edit_form.imageName, 'Image') }}
        {{ form_widget(edit_form.imageName) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('admin_image_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
